document.addEventListener('DOMContentLoaded', function () {
                var tabs = document.querySelectorAll('.tabs');
                M.Tabs.init(tabs, null);

                var calendar = document.querySelectorAll('datepicker');
                M.Datepicker.init(calendar, {
                    format: 'dd mmmm yyyy',
                    container: '#calendary',
                    minDate: new Date(),
                    autoClose: true
                })
                
            });